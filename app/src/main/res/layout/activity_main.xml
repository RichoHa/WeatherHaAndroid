<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dateCurrent"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="24sp"
        android:text="@string/dateCurrent"
        android:typeface="serif"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/locationCurrent"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="24sp"
        android:text="@string/locationCurrent"
        android:typeface="serif"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/timeCurrent"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="24sp"
        android:text="@string/timeCurrent"
        android:typeface="serif"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/tempCurrent"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="24sp"
        android:text="@string/tempCurrent"
        android:typeface="serif"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/logoCurrent"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="24sp"
        android:text="@string/logoCurrent"
        android:typeface="serif"
        android:layout_gravity="center"
        />
</LinearLayout>